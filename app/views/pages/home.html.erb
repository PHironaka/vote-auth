<h1>homepage</h1>

<% if current_user %>
<div class="welcome">
  <h2>Hello <% current_user.name %></h2>
  <%= image_tag (current_user.image) %>
</div>
<% end %>

<% unless current_user %>
  <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
<% else %>
  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
<% end %>
